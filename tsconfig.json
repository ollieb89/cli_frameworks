{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "*": ["packages/*"],
      "@omnicode/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
